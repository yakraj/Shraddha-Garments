{
  "version": 2,
  "functions": {
    "server/src/index.ts": {
      "runtime": "@vercel/node",
      "includeFiles": "server/prisma/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
